{
    "compilerOptions": {
        "target": "es2017",
        "outDir": "dist",
        "lib": ["es2017"],
        "module": "commonjs",
        "strict": true,
        "removeComments": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist",
        "tests/**/*"
    ],
    "typedocOptions": {
        "entryPoints": ["./lib"],
        "out": "docs",
        "entryPointStrategy": "expand",
        "lightHighlightTheme": "github-light",
        "darkHighlightTheme": "github-dark",
        "logLevel": "Verbose",
        "hideGenerator": true,
        "hideLegend": true
    }
}
